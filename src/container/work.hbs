<div class="row">
	{{#with main}}
    <main class="col-6">
        <section>
            {{> title name="Work history" big=true}}
            <div>
                <ul class="list-group">
                    {{#each works}}
                        <li class="list-group-item mx-2">
                            <div class="m-2">{{position}}</div>
                            <div class="mt-1">{{duration.from}} - {{#if duration.to}}{{duration.to}} {{else}} (still working){{/if}}</div>
                            <br>
                            <div>
                                {{#if company.url}}
                                    {{> link href=company.url text=company.name blank=true woLine=true}}
                                {{else}}
                                    <b>{{company.name}}</b>
                                {{/if}}
                            </div>
                            <br>
                            <br>
                            <div><strong>Projects ({{projectAmount}})</strong></div>
                            <br>
                            <ul class="list-group">
                                {{#each projects}}
                                <li class="list-group-item mx-2">
                                    <div>{{> link href=url text=name blank=true woLine=true}}</div>
                                    <br>
                                    <div><p>{{about}}</p></div>
                                    <br>
                                    <em>Project stacks ({{stackAmount}})</em>
                                    <ul class="list-group">
                                        {{#each stacks}}
                                        <li class="list-group-item mx-2">
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                    <br>
                                    <em>Project awards:</em>
                                    <ul class="list-group">
                                        {{#each awards}}
                                        <li class="list-group-item mx-2">
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                        </li>
                        <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
	{{/with}}
</div>