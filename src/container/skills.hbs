<div>
    {{#with main}}
    <main>
        <section>
            {{> title name="All skills" big=true}}
            <ul class="list-group">
                {{#each skills}}
                    <li class="list-group-item mx-2">
                        {{name}}
                        {{#if point includeZero=true}}({{point}}){{/if}}
                        {{#if isTop}}<span class="badge rounded-pill text-bg-danger">TOP</span>{{/if}}
                        {{#unless point includeZero=true}}<span class="badge rounded-pill text-bg-dark">NOT STUDYING</span>{{/unless}}
                        {{#unless point}}
                            {{#if point includeZero=true}}
                                <span class="badge rounded-pill text-bg-warning">STUDYING</span>
                            {{/if}}
                        {{/unless}}
                    </li>
                {{/each}}
            </ul>
        </section>
        <section class="mt-5">
            {{> title name="Hobbies"}}
            <ul class="list-group">
                {{#each hobbies}}
                    <li class="list-group-item mx-2">
                        {{name}}
                        {{#if isMain}}<span class="badge rounded-pill text-bg-success">MAIN</span>{{/if}}
                    </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>