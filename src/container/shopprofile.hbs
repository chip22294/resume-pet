<div class="row g-2">
    {{#with navigation}}
        <div class="col-12">
            <div class="card">
                <div class="nav">
                    {{#each links}}
                        <div class="nav-item">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                    {{/each}}
                    <div class="nav-item">
                        <a href="#" class="nav-link disabled">Disabled</a>
                    </div>
                </div>
            </div>
        </div>
    {{/with}}
    <h3 class="mb-2 my-5">{{header}}</h3>
    {{#with purchase}}
        <ul class="nav nav-tabs">
            {{#each tabs}}
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">{{this}}</a>
                </li>
            {{/each}}
        </ul>
        {{#with actionBlock}}
            <div class="col-4">
                {{#with input}}
                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                {{/with}}
            </div>
            <div class="col-8">
                {{#each buttons}}
                    {{#if isSuccess}}
                        <a href="#" class="btn btn-success m-1">{{text}}</a>
                    {{/if}}
                    {{#if isOutline}}
                        <a href="#" class="btn btn-outline-success m-1">{{text}}</a>
                    {{/if}}
                    {{#if isDanger}}
                        <a href="#" class="btn btn-danger m-1">{{text}}</a><div class="card-body row py-1"></div>
                    {{/if}}
                {{/each}}
            </div>
        {{/with}}
        <hr class="col-12 my-2">
        {{#each itemList}}
            {{> purchaseItem}}
        {{/each}}
    {{/with}}
    <hr class="col-12 my-5">
    {{#with userInfo}}
        <h3 class="mb-2 mb-5">{{title}}</h3>
        <div class="card m-2">
            {{#with profileData}}
                <h5 class="card-title m-2">{{title}}</h5>
                <div class="card m-2">
                    <div class="card-body row py-1">
                        {{#with fullName}}
                            {{#with surname}}
                                <div class="col-4 align-self-center">
                                    {{title}}
                                    <h5>{{value}}</h5>
                                </div>
                            {{/with}}
                            {{#with name}}
                                <div class="col-4 align-self-center">
                                    {{title}}
                                    <h5>{{value}}</h5>
                                </div>
                            {{/with}}
                            {{#with middleName}}
                                <div class="col-4 align-self-center">
                                    {{title}}
                                    <h5>{{value}}</h5>
                                </div>
                            {{/with}}
                        {{/with}}
                    </div>
                </div>
                <div class="card m-2">
                    <div class="card-body row py-1">
                        {{#with otherInfo}}
                            {{#with birthday}}
                                <div class="col-4 align-self-center">
                                    {{title}}
                                    <h5>{{value}}</h5>
                                </div>
                            {{/with}}
                            {{#with sex}}
                                <div class="col-4 align-self-center">
                                    {{title}}
                                    <h5>{{value}}</h5>
                                </div>
                            {{/with}}
                            {{#with language}}
                                <div class="col-4 align-self-center">
                                    {{title}}
                                    <h5>{{value}}</h5>
                                </div>
                            {{/with}}
                        {{/with}}
                    </div>
                </div>
            {{/with}}
            <div class="card m-2">
                <div class="card-body row py-1">
                    {{#each buttons}}
                        <div class="col-4 align-self-center">
                            {{#if isPrimary}}
                                <a href="#" class="btn btn-primary m-1">{{text}}</a>
                            {{/if}}
                            {{#if isSecondary}}
                                <a href="#" class="btn btn-outline-secondary m-1">{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                                <a href="#" class="btn btn-outline-danger m-1">{{text}}</a>
                            {{/if}}
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="card m-2">
            <div class="card-body row">
            {{#with recipients}}
                <h5 class="card-title">{{title}}</h5>
                {{#each users}}
                    <div class="card m-2 col-4">
                        <div class="card-body">
                            <div class="align-self-center">
                                <h5>{{name}}</h5>
                                <p>{{phone}}</p>
                                {{#with button}}
                                    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                {{/with}}
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{/with}}
            </div>
        </div>
        <div class="card m-2">
            <div class="card-body row">
            {{#with contacts}}
                <h5 class="card-title">{{title}}</h5>
                {{#each contactData}}
                    <div class="card m-2 col-4">
                        <div class="card-body">
                            <div class="align-self-center">
                                <p>{{title}}</p>
                                <h5>{{value}}</h5>                                
                                {{#with button}}
                                    {{#if isPrimary}}
                                        <a href="#" class="btn btn-primary m-1">{{text}}</a>
                                    {{/if}}
                                    {{#if isSecondary}}
                                        <a href="#" class="btn btn-outline-secondary m-1">{{text}}</a>
                                    {{/if}}
                                    {{#if isDanger}}
                                        <a href="#" class="btn btn-outline-danger m-1">{{text}}</a>
                                    {{/if}}
                                {{/with}}
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{/with}}
            </div>
        </div>
    {{/with}}
    <hr class="mt-5">
    {{#each footer}}
        <div class="col-2">
            <div class="nav flex-column">
                <div class="nav-item">
                    <a href="{{this.[0].link}}" class="nav-link">{{this.[0].text}}</a>
                    <a href="{{this.[1].link}}" class="nav-link">{{this.[1].text}}</a>
                    <a href="{{this.[2].link}}" class="nav-link">{{this.[2].text}}</a>
                    <a href="{{this.[3].link}}" class="nav-link disabled">{{this.[3].text}}</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>