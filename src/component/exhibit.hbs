<div>
    <dl>
    <dt><b>Exhibits:</b></dt>
    {{#each list}}
        <dd>
            {{#if audio_guide}}<span class="badge text-bg-success">Sound</span>{{/if}}
            {{this.name}}
            {{#if this.artist}}
             - {{this.artist}}
            {{/if}}
            <em>({{this.description}})</em>
        </dd>
    {{/each}}
    </dl>
</div>