{{!-- 
  Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
  І котрий обгортає код container файлів для будь-яких ендпоїнтів
--}}
<!DOCTYPE html>
<html>

  <head>
    {{#if page.title.name}}
      <title>{{page.title.name}}</title>
    {{else}}
      <title>Untitled page</title>
    {{/if}}
    <meta charset='utf-8' />
    <link href='css/index.css' rel='stylesheet' />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    
    {{!  ↓  підключаємо іконки bootstrap   --}}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/e54adc4eae.js" crossorigin="anonymous"></script>
  </head>

  <body class="p-5">
	{{#with header}}
    <header>
      <div class="mb-2">
        <h1>{{name.firstname}} {{name.lastname}} | Resume</h1>
      </div>
      <div class="mb-2">
        <b>{{position}}</b>
      </div>
      <div class="mb-2">
        <em>{{sallary}}</em>
      </div>
      <div class="mb-2">
        <address>{{address}}</address>
      </div>
      <hr class="my-5"> 
    </header>
	{{/with}}
    <div class="mb-5">
      {{> nav}}
    </div>

    {{{body}}}

    {{> footer}}
	
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>

</html>